{% extends "layout.twig" %}
{% block content %}
    {% for article in articles %}

        <div class="col-4 mb-3">
            <article class="article">

                <div class="card shadow-sm">
                    <img src="{{ article.image }}" width="100%" height="225" alt="">
                    <div class="card-body" >
                        <h5 class="card-title">{{ article.title }}  </h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/page/{{ article.id }}"  class="btn btn-sm btn-outline-secondary">Подробнее</a>
                        </div>
                    </div>
                </div>
            </article>
        </div>

        <form name="calc" action="articlesList.twig" >
        <label> создать статью <input type="text" name="create"></label>
        <a href=" "</a>
        <label> прочитать статью <input type="text" name="create"></label>
        <button class="btn btn-outline-success text-white" type="submit">+</button>
        <label> обновить статью <input type="text" name="update"></label>
        <button class="btn btn-outline-success text-white" type="submit">=</button>
        <label> удалить статью <input type="text" name="delete"></label>


    {% endfor %}
{% endblock %}