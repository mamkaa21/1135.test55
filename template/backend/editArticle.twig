{% extends "layout.twig" %}
{% block content %}

    <!--begin::Create Article form -->
    <div class="card card-primary card-outline mb-4"> <!--begin::Header-->
        <div class="card-header">
            <div class="card-title">Редактирование статьи</div>
        </div> <!--end::Header-->
        <!--begin::Body-->
        <div class="card-body">
            <!--begin::Form-->
            <form action="/admin/update" method="post">
                <!--begin::Body-->
                <div class="card-body">
                    <div class="mb-3">
                        <label for="title" class="form-label">Заголовок статьи</label>
                        <input type="text" name="title" class="form-control" id="title" value="{{ article.title }}">

                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Изображение вводного текста</label>
                        <input type="text" name="image" class="form-control" id="image" value="{{ article.image }}">
                    </div>
                    <div class="mb-3">
                        <label for="content" class="form-label">Текст статьи</label>
                        <textarea class="form-control" id="content" rows="3" name="content">{{ article.content }}</textarea>
                    </div>
                    <input type="hidden" name="id" value="{{ article.id }} ">
                </div>
                <!--end::Body-->
                <!--begin::Footer-->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary" name="btnStore">Сохранить статью</button>
                </div>
                <!--end::Footer-->
            </form>
            <!--end::Form-->
        </div>
        <!--end::Body-->
    </div>
    <!--end::Create Article form-->

{% endblock %}